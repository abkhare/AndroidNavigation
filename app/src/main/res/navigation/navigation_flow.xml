<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/navigation_flow"
            app:startDestination="@id/startFragment">

    <fragment android:id="@+id/startFragment" android:name="com.abhi.androidnavigation.StartFragment"
              android:label="fragment_start" tools:layout="@layout/fragment_start">
        <action android:id="@+id/action_startFragment_to_firstFragment" app:destination="@id/firstFragment"/>
        <action android:id="@+id/action_startFragment_to_secondFragment" app:destination="@id/secondFragment"/>
    </fragment>
    <fragment android:id="@+id/firstFragment" android:name="com.abhi.androidnavigation.FirstFragment"
              android:label="fragment_first" tools:layout="@layout/fragment_first"/>
    <fragment android:id="@+id/secondFragment" android:name="com.abhi.androidnavigation.SecondFragment"
              android:label="fragment_second" tools:layout="@layout/fragment_second"/>
</navigation>